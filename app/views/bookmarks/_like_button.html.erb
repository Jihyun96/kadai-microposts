<% if current_user.bookmarking?(micropost) %>
  <%= form_for(current_user.bookmarks.find_by(micropost_id: micropost.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'UnLike', class: 'btn btn-secondary btn-xs' %>
   <% end %>
  <% else %>
  <%= form_for(current_user.bookmarks.build) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'Like', class: 'btn btn-success btn-xs' %>
  <% end %> 
<% end %>
